<?xml version="1.0" encoding="UTF-8"?>
<web-app
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5"
  xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>org.dreborier.server.PonganConsoleRegistrationServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>move</servlet-name>
    <servlet-class>org.dreborier.server.MoveServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/googletvhackathon/register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>move</servlet-name>
    <url-pattern>/move/*</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GoogleTvHackathon.html</welcome-file>
  </welcome-file-list>

</web-app>
